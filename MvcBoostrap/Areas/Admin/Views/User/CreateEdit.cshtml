@model UserModel
@section head {
}
@section scripts {
	<script>
		$('#btn-save').click(function() {
			$('#form-fields').submit();
			return false;
		});
	</script>

	@if(!ViewBag.is_create)
	{
		<script>
		</script>
	}
}

<nav>
	@Html.Breadcrumb(I18N.GlobalTranslate(ViewBag.is_create ? "Criar usuário" : "Editar usuário"), I18N.GlobalTranslate("Usuários"), "/Admin/User/List")

	<div class="actions">
		<div class="container">
			<div class="wrap">
				<a href="" class="btn btn-primary" id="btn-save">
					<svg class="icon icon-save"><use xlink:href="#save"></use></svg> @Html.Translate("Salvar")
				</a>
			</div>
		</div>
	</div>
</nav>

<div class="container">
	<form method="post" id="form-fields">
		<div class="form-group">
			<label class="control-label">@Html.Translate("Nome"):</label>
			<input type="text" class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label class="control-label">@Html.Translate("E-mail"):</label>
			<input type="email" class="form-control" asp-for="Email" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label class="control-label">@Html.Translate("Senha"):</label>
			<input type="text" class="form-control" asp-for="PWD" />
			<span asp-validation-for="PWD" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label class="control-label">@Html.Translate("Confirmação senha"):</label>
			<input type="text" class="form-control" asp-for="PWD2" />
			<span asp-validation-for="PWD2" class="text-danger"></span>
		</div>

		@if(!ViewBag.is_create)
		{
			<input type="hidden" value="@Model.Id" asp-for="Id" />
		}
	</form>
</div>